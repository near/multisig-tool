{
  "name": "multisig-tool",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@babel/core": "^7.0.0-0",
    "@reduxjs/toolkit": "^1.5.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/enzyme-to-json": "^1.5.4",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.15",
    "antd": "^4.10.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "near-api-js": "^0.36.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-scripts": "4.0.1",
    "redux": "^4.0.5",
    "redux-persist": "^6.0.0",
    "typescript": "^4.1.3",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-typescript-prettier": "^4.1.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test:watch": "react-scripts test --watchAll --silent",
    "test:changed": "react-scripts test --silent -o",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:staged": "react-scripts test --watchAll=false --passWithNoTests",
    "eject": "react-scripts eject",
    "lint:eslint": "eslint --ignore-path .eslintignore src",
    "lint:eslint:fix": "eslint --ignore-path .eslintignore src --fix",
    "prettier:check": "prettier --ignore-path .prettierignore src --check",
    "prettier:write": "prettier --ignore-path .prettierignore src --write"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test:staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn prettier:write"
    ]
  }
}
